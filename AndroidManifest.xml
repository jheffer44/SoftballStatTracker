<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.softballstattracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.softballstattracker.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.softballstattracker.StartActivity"
            android:label="@string/title_activity_start" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.softballstattracker.AddPlayerActivity"
            android:label="@string/title_activity_add_player" >
        </activity>
        <activity
            android:name="com.example.softballstattracker.AddGameActivity"
            android:label="@string/title_activity_add_game" >
        </activity>
        <activity
            android:name="com.example.softballstattracker.ChoosePlayersActivity"
            android:label="@string/title_activity_choose_players" >
        </activity>
    </application>

</manifest>